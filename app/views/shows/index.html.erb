Hello <%= current_user.username %>! <%= link_to 'Log out', logout_path(current_user) %>

<%# Show a form for adding a new series %>
<%= form_tag do %>
  <%= label_tag(:add, 'Add Series') %>
  <%= text_field_tag(:add) %>
  <%= submit_tag('Add') %>
<% end %>

<%# Display the shows for this user -- they'll be set to @shows %>
<% @shows.each do |s| %>
  <%= content_tag :h1, s %>
<% end %>